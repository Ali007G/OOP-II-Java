package practice;

class Employee {
    void showInfo() {
        System.out.println("This is an employee.");
    }
}

class Manager extends Employee {
    void manageTeam() {
        System.out.println("Employee as Manager: Managing the team...");
    }
}

class Developer extends Employee {
    void writeCode() {
        System.out.println("Employee as Developer: Writing code...");
    }

}

public class heirarchical {

    public static void main(String[] args) {
        Manager manager = new Manager();
        Developer developer = new Developer();

        manager.showInfo();
        manager.manageTeam();

        developer.showInfo();
        developer.writeCode();
    }

}
